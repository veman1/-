
page {
  box-sizing: border-box;
  padding: 25rpx;
}

.g-intro {
  line-height: 1.7;
}
.g-intro:before {
  display: block;
  content: '公司简介';
  font-size: 28rpx;
  padding: 0 0 25rpx;
}

.g-banner {
  margin: 25rpx 0 0;
}
.g-banner image {
  display: block;
  width: 100%;
  height: 300rpx;
}

.g-product {
  margin: 25rpx 0 0;
}
.g-product:before {
  display: block;
  content: '公司产品';
  font-size: 28rpx;
  padding: 0 0 25rpx;
}
.g-product__list {
  display: flex;
  flex-wrap: wrap;
}
.m-product_item {
  width: 155rpx;
  margin: 0 20rpx 25rpx 0;
}
.m-product_item:last-child {
  margin-right: 0;
}
.m-product_item image {
  display: block;
  width: 100%;
  height: 155rpx;
}
.m-product_item text {
  display: block;
  text-align: center;
}