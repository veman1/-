
page {
  padding: 0 0 35rpx;
}

.g-banner image {
  display: block;
  width: 100%;
  height: 180rpx;
}

.g-main {
  padding: 0 25rpx;
  margin: 25rpx 0 0;
}
.m-box {
  position: relative;
  box-sizing: border-box;
  border-radius: 3px;
  background-color: #fff;
  height: 120rpx;
  width: 100%;
  margin: 0 0 20rpx;
  padding: 0 25rpx;
  display: flex;
  align-items: center;
  color: #464646;
}
.m-box.ft-arrow, 
.m-box.ft-size {
  padding-right: 70rpx;
}
.m-box.ft-arrow:after {
  content: '';
  position: absolute;
  right: 25rpx;
  top: 50%;
  width: .5em;
  height: .5em;
  border-left: 1px solid #AAAAAA;
  border-bottom: 1px solid #AAAAAA;
  transform-origin: 50% 50%;
  transform: translate(0, -50%) rotate(-135deg);
}
.m-box.ft-size:after {
  content: 'm²';
  position: absolute;
  top: 50%;
  right: 25rpx;
  color: #aaaaaa;
  transform: translate(0, -50%);
}
.m-box.empty_city:before {
  content: '请选择您的所在城市';
  color: #BCBCBC;
}
.m-box--placeholder { color: #BCBCBC; }
.g-flex {
  display: flex;
}
.g-flex__item {
  width: 100%;
  margin-right: 20rpx;
}
.g-flex__item:last-child {
  margin-right: 0;
}

.u-button {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 3em;
  width: 100%;
  color: #fff;
  background-color: #F4CF1F;
  border-radius: 4px;
  font-size: 1.1em;
}

.g-result {
  margin: 60rpx 25rpx 0;
}
.m-result {
  border-radius: 5px;
  overflow: hidden;
  background-color: #fff;
}
.m-result__title {
  padding: 25rpx 0 20rpx;
  background-color: #FFF3BF;
}
.m-result__title:before {
  content: '装修报价';
  display: block;
  text-align: center;
  color: #000;
  margin: 0 0 20rpx;
  font-size: 26rpx;
}
.m-result__title {
  color: #F4CF1F;
  text-align: center;
  font-size: 36rpx;
}
.m-result__content {
  color: #000;
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx 0 0;
}
.m-result__item {
  width: 50%;
  text-align: center;
  margin: 0 0 25rpx;
}