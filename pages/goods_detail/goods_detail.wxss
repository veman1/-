.g-banner {
  height: 460rpx;
}
.g-banner image { 
  width: 100%;
  height: 100%;
  display: block;
}

.g-title {
  display: flex;
  justify-content: space-between;
  background-color: #262626;
  padding: 1.3em 1em;
  font-size: 30rpx;
  box-sizing: border-box;
}
.g-title text {
  max-width: 65%;
}
.g-title view {
  max-width: 30%;
}

.g-content {
  background-color: #000;
  padding: 35rpx 27rpx 20rpx;
}
.g-content__intro {
  position: relative;
  box-sizing: border-box;
  width: 100%;
  padding: 2em 1em 1em;
  border-radius: 5px;
  border: 1px solid #fff;
  background-color: inherit;
}
.g-content__intro:before {
  content: '商品介绍';
  position: absolute;
  padding: 0 .3em;
  font-size: 30rpx;
  top: -.7em;
  left: 1.2em;
  background-color: inherit;
}
.g-content__detail {  }
.g-content__detail>view {
  display: flex;
  justify-content: space-between;
  margin: .8em 0 0;
}
.g-content__detail>view>text {
  width: 85%;
}